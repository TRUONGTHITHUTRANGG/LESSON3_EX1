<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RadioButton
        android:id="@+id/leoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="chooseTurtle"
        android:text="Leo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <RadioButton
        android:id="@+id/raphBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="chooseTurtle"
        android:text="Raph"
        app:layout_constraintStart_toEndOf="@+id/leoBtn"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <RadioButton
        android:id="@+id/donBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="chooseTurtle"
        android:text="Don"
        app:layout_constraintStart_toEndOf="@+id/raphBtn"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <RadioButton
        android:id="@+id/mikeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="chooseTurtle"
        android:text="Mike"
        app:layout_constraintStart_toEndOf="@+id/donBtn"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/chooseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Please choose"
        android:textColor="#8BC34A"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donBtn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseTextView"
        tools:srcCompat="@tools:sample/avatars" />

    <Switch
        android:id="@+id/hideImgSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Hide image"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>